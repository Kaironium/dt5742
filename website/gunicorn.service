[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=nginx
Group=nginx
WorkingDirectory=/opt/btl-testing
Environment="WEBSITE_SETTINGS=/opt/btl-testing/settings.txt"
ExecStart=gunicorn --workers 3 --bind unix:/tmp/gunicorn.sock btl_testing:app --error-logfile=/var/log/gunicorn/gunicorn.log

[Install]
WantedBy=multi-user.target
